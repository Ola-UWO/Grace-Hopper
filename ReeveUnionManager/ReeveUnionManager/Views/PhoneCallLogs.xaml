<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.PhoneCallLogs"
             Title="Phone Call Logs"
             xmlns:local="clr-namespace:ReeveUnionManager">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="FillAndExpand">

            <Label Text="Phone Call Logs"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0" />

            <BoxView HeightRequest="1"
                     Color="Gray"
                     HorizontalOptions="FillAndExpand" />

            <Grid RowDefinitions="Auto,*"
                  Padding="0"
                  HorizontalOptions="FillAndExpand">

                <Grid Grid.Row="0"
                      ColumnDefinitions="*,*"
                      Padding="0,0,0,5"
                      HorizontalOptions="FillAndExpand">
                    <Label Grid.Column="0" Text="Caller" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="1" Text="Time" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                </Grid>

                <VerticalStackLayout Grid.Row="1" Spacing="5" Margin="0,10,0,0">
                    <Grid ColumnDefinitions="*,*">
                        <Label Grid.Column="0" Text="John Doe" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="1" Text="5:35 AM" HorizontalTextAlignment="Center" />
                    </Grid>
                    <Grid ColumnDefinitions="*,*">
                        <Label Grid.Column="0" Text="Jane Doe" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="1" Text="1:00 PM" HorizontalTextAlignment="Center" />
                    </Grid>
                </VerticalStackLayout>

                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding EventLogs}"
                                HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,*"
                                  Padding="0,5"
                                  HorizontalOptions="FillAndExpand">
                                <Label Grid.Column="0" Text="{Binding Name}" HorizontalTextAlignment="Center" />
                                <Label Grid.Column="1" Text="{Binding Time}" HorizontalTextAlignment="Center" />
                                <Label Grid.Column="2" Text="{Binding Location}" HorizontalTextAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>