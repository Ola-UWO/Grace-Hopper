<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.ClosingCheckListPage">

    <VerticalStackLayout Spacing="0">
        
        <Border StrokeThickness="1"
                HeightRequest="45"
                WidthRequest="410"
                BackgroundColor="WhiteSmoke">
            
            <Label Text="CLOSING CHECKLIST"
                   VerticalOptions="Center"
                   Padding="12"
                   FontSize="14"
                   FontAttributes="Bold"/>
                
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="50,50,0,0"/>
            </Border.StrokeShape>

        </Border>

        <Label x:Name="DateLabel"
               Text="Date shows"
               Padding="20,15,20,5"
               FontSize="16"
               FontAttributes="Bold"/>

        <VerticalStackLayout Padding="20,10,20,20" Spacing="8">
            <Label x:Name="ProgressLabel" 
                   Text="0 of 10 completed"
                   FontSize="14"/>
            <ProgressBar x:Name="CompletionProgressBar" 
                         Progress="0"
                         HeightRequest="8"/>
        </VerticalStackLayout>

        <ScrollView VerticalOptions="FillAndExpand">
            <VerticalStackLayout x:Name="ChecklistContainer" 
                                 Spacing="0" 
                                 Padding="10,0,10,0">
                
                <Border Padding="15,12" 
                        Margin="0,0,0,1">
                    <Grid ColumnDefinitions="Auto,*">
                        
                        <Label Grid.Column="1" 
                               Text="Task 1" 
                               VerticalOptions="Center"
                               Padding="10,0,0,0"
                               FontSize="16"/>
                    </Grid>
                </Border>

                <Border Padding="15,12" 
                        Margin="0,0,0,1">
                    <Grid ColumnDefinitions="Auto,*">
                        
                                  
                        <Label Grid.Column="1" 
                               Text="Task 2" 
                               VerticalOptions="Center"
                               Padding="10,0,0,0"
                               FontSize="16"/>
                    </Grid>
                </Border>

                <Border Padding="15,12" 
                        Margin="0,0,0,1">
                    <Grid ColumnDefinitions="Auto,*">
                      
                        <Label Grid.Column="1" 
                               Text="Task 3" 
                               VerticalOptions="Center"
                               Padding="10,0,0,0"
                               FontSize="16"/>
                    </Grid>
                </Border>


            </VerticalStackLayout>
        </ScrollView>

        <Grid Padding="20" 
              ColumnDefinitions="*,*" 
              ColumnSpacing="10">
            <Button Grid.Column="0" 
                    Text="Add Task" 
                    />
            <Button Grid.Column="1" 
                    Text="Reset All" 
                    />
        </Grid>

    </VerticalStackLayout>
    
</ContentPage>