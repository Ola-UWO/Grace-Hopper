<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ReeveUnionManager.ViewModels"
             x:Class="ReeveUnionManager.Views.ManagerLogsPage">

    <!-- PAGE-LEVEL RESOURCES -->
    <ContentPage.Resources>
        <!-- Navigation ViewModel scoped to the button only -->
        <viewModels:PageViewModel x:Key="PageViewModel"/>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              Padding="20,20,20,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title Section -->
            <VerticalStackLayout Grid.Column="0"
                                 Spacing="4"
                                 VerticalOptions="Center">
                <Label Text="Manager Logs"
                       FontSize="25"
                       FontAttributes="Bold"/>
                <HorizontalStackLayout Spacing="8"
                                       Margin="0,4,0,0">
                    <Label Text="ðŸ—“ï¸"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center"/>
                    <Label Text="Last 7 Log Entries"
                           FontSize="16"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- New Log Entry Button -->
            <Button Grid.Column="1"
                    Text="+ New Log Entry"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="12"
                    Padding="20,10"
                    Margin="12,0,0,0"
                    VerticalOptions="Center"
                    Command="{Binding NavigateCommand, Source={StaticResource PageViewModel}}"
                    CommandParameter="NewLogEntryPage"/>
        </Grid>

        <!-- Scrollable List of Logs -->
        <CollectionView Grid.Row="1"
                        x:Name="LogsList"
                        Margin="16,0,16,16">

            <!-- Spacing between rows -->
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="12"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Outer card -->
                    <Border Padding="16"
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12"/>
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Radius="8"
                                    Opacity="0.35"/>
                        </Border.Shadow>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Icon "card" -->
                            <Border Grid.Column="0"
                                    Padding="12"
                                    WidthRequest="56"
                                    HeightRequest="56"
                                    StrokeThickness="0"
                                    VerticalOptions="Start">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12"/>
                                </Border.StrokeShape>

                                <Label Text="ðŸ“„"
                                       WidthRequest="56"
                                       HeightRequest="56"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                                       FontSize="40"/>
                            </Border>

                            <!-- Content -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="4">
                                <!-- Log Name with corresponding date -->
                                <Label Text="{Binding Date, StringFormat='{0:MM/d/yyyy}'}"
                                       FontSize="20"
                                       FontAttributes="Bold"/>

                                <HorizontalStackLayout Spacing="16">
                                    <HorizontalStackLayout Spacing="6">
                                        <!-- Last Edited Date from DB -->
                                        <Label Text="{Binding LastEdited, StringFormat='Last Edit: {0:MM/dd/yyyy h:mm tt}'}"
                                               FontSize="14"/>
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
