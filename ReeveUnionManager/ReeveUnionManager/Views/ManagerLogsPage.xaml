<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ReeveUnionManager.ViewModels"
             x:Class="ReeveUnionManager.Views.ManagerLogsPage"
             Title="Manager Logs">

    <ContentPage.Resources>
        <viewModels:PageViewModel x:Key="PageViewModel"/>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header: buttons + status bar -->
        <Grid Grid.Row="0"
              Padding="20,20,20,8">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Sign In / Sign Out -->
            <Button x:Name="SignInOutHeaderButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Sign In"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="12"
                    Padding="20,10"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="OnSignInOutHeaderClicked"/>

            <!-- Right: New Log Entry -->
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="+ New Log Entry"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="12"
                    Padding="20,10"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Command="{Binding NavigateCommand, Source={StaticResource PageViewModel}}"
                    CommandParameter="NewLogEntryPage"/>

            <!-- Divider + Status bar -->
            <VerticalStackLayout Grid.Row="1"
                                 Grid.ColumnSpan="3"
                                 Spacing="6"
                                 Margin="0,8,0,0">

                <BoxView HeightRequest="1"
                         BackgroundColor="#DDDDDD"
                         HorizontalOptions="FillAndExpand"
                         Margin="10,0,10,4"/>

                <Border x:Name="StatusBarContainer"
                        Padding="10"
                        Margin="10,0,10,4"
                        StrokeThickness="1"
                        Stroke="#E0E0E0"
                        BackgroundColor="#F7F7F7">

                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStatusBarTapped"/>
                    </Border.GestureRecognizers>

                    <HorizontalStackLayout Spacing="10"
                                           VerticalOptions="Center">

                        <Label x:Name="StatusBarIcon"
                               Text="âš ï¸"
                               FontSize="16"
                               VerticalOptions="Center"/>

                        <VerticalStackLayout Spacing="2">
                            <Label x:Name="StatusBarTitle"
                                   Text="Not connected to OneDrive"
                                   FontSize="14"
                                   FontAttributes="Bold"/>

                            <Label x:Name="StatusBarSubtitle"
                                   Text="Sign in to view manager logs."
                                   FontSize="12"
                                   TextColor="Gray"/>
                        </VerticalStackLayout>

                    </HorizontalStackLayout>
                </Border>

            </VerticalStackLayout>
        </Grid>


        <!-- "Recent Logs" heading -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="6"
                             Margin="20,0,20,4">

            <BoxView HeightRequest="1"
                     BackgroundColor="#DDDDDD"
                     HorizontalOptions="FillAndExpand"/>

            <Grid Margin="0,10,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left: Recent Logs label -->
                <Label Text="Recent Logs"
                       FontSize="18"
                       FontAttributes="Bold"
                       Grid.Column="0"
                       VerticalOptions="Center"
                       HorizontalOptions="Start"/>

                <!-- Right: Upload button (initially hidden) -->
                <Button x:Name="UploadButton"
                        Grid.Column="1"
                        Text="Upload"
                        FontAttributes="Bold"
                        FontSize="14"
                        CornerRadius="12"
                        Padding="16,6"
                        HorizontalOptions="End"
                        VerticalOptions="Center"
                        IsVisible="False"
                        Clicked="OnUploadLogFromDeviceClicked"/>
            </Grid>
        </VerticalStackLayout>


        <!-- Logs list + empty state -->
        <Grid Grid.Row="2"
              Margin="16,0,16,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label x:Name="EmptyStateLabel"
                   Text="No recent logs. Add a new entry or sign in to Microsoft to view logs."
                   FontSize="13"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <CollectionView x:Name="LogsList"
                            Grid.Row="1"
                            SelectionMode="Single"
                            SelectionChanged="OnLogSelected"
                            VerticalOptions="FillAndExpand">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="12"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="16"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Radius="8"
                                        Opacity="0.35"/>
                            </Border.Shadow>

                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon card -->
                                <Border Grid.Column="0"
                                        Padding="12"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Label Text="ðŸ“„"
                                           WidthRequest="56"
                                           HeightRequest="56"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center"
                                           FontSize="40"/>
                                </Border>

                                <!-- Log metadata -->
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="4">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Text="{Binding LastModifiedDateTime.LocalDateTime,
                                                          StringFormat='Last modified {0:MM/dd/yyyy h:mm tt}'}"
                                           FontSize="14"/>
                                </VerticalStackLayout>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- Centered loading overlay -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           Grid.RowSpan="3"
                           IsVisible="False"
                           IsRunning="False"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           WidthRequest="60"
                           HeightRequest="60"
                           Scale="1.3"/>
    </Grid>
</ContentPage>
