<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ReeveUnionManager.ViewModels"
             x:Class="ReeveUnionManager.Views.ManagerLogsPage">

    <!-- PAGE-LEVEL RESOURCES -->
    <ContentPage.Resources>
        <viewModels:PageViewModel x:Key="PageViewModel"/>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- "Recent Logs" subheading -->
            <RowDefinition Height="*"/>
            <!-- Logs list + empty state -->
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Grid Grid.Row="0"
              Padding="20,20,20,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title + New Log -->
                <RowDefinition Height="Auto"/>
                <!-- Action buttons -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Title Section -->
            <VerticalStackLayout Grid.Row="0"
                                 Grid.Column="0"
                                 Spacing="4"
                                 VerticalOptions="Center">
                <Label Text="Manager Logs"
                       FontSize="25"
                       FontAttributes="Bold"/>
            </VerticalStackLayout>

            <!-- New Log Entry Button -->
            <Button Grid.Row="0"
                    Grid.Column="1"
                    Text="+ New Log Entry"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="12"
                    Padding="20,10"
                    Margin="12,0,0,0"
                    VerticalOptions="Center"
                    Command="{Binding NavigateCommand, Source={StaticResource PageViewModel}}"
                    CommandParameter="NewLogEntryPage"/>

            <!-- Divider + Action Buttons -->
            <VerticalStackLayout Grid.Row="1"
                                 Grid.ColumnSpan="2"
                                 Spacing="6"
                                 Margin="0,8,0,0">

                <!-- Divider line -->
                <BoxView HeightRequest="1"
                         BackgroundColor="#DDDDDD"
                         HorizontalOptions="FillAndExpand"
                         Margin="10,0,10,4"/>

                <!-- Buttons row -->
                <HorizontalStackLayout x:Name="ActionButtonsRow"
                                       HorizontalOptions="End"
                                       VerticalOptions="Center"
                                       Spacing="12"
                                       Margin="0,8,0,8">

                    <Button x:Name="SignInButton"
                            Text="Sign in with Microsoft"
                            FontSize="14"
                            CornerRadius="10"
                            Padding="16,10"
                            IsVisible="True"
                            HorizontalOptions="End"
                            Clicked="OnSignInWithMicrosoftClicked"/>

                    <Button x:Name="LoadLogsButton"
                            Text="Load OneDrive Logs"
                            FontSize="14"
                            CornerRadius="10"
                            Padding="16,10"
                            IsVisible="False"
                            HorizontalOptions="End"
                            Clicked="OnLoadLogsClicked"/>

                    <Button x:Name="SignOutButton"
                            Text="Sign out"
                            FontSize="14"
                            CornerRadius="10"
                            Padding="16,10"
                            IsVisible="False"
                            HorizontalOptions="End"
                            Clicked="OnSignOutClicked"/>

                </HorizontalStackLayout>

            </VerticalStackLayout>



        </Grid>

        <!-- Divider + Recent Logs heading -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="6"
                             Margin="20,0,20,4">

            <!-- Divider line -->
            <BoxView HeightRequest="1"
                     BackgroundColor="#DDDDDD"
                     HorizontalOptions="FillAndExpand"/>

            <!-- Subheading -->
            <Label Text="Recent Logs"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,20"/>
        </VerticalStackLayout>


        <!-- Logs + Empty State -->
        <VerticalStackLayout Grid.Row="2"
                             Margin="16,0,16,16"
                             Spacing="6">

            <!-- Empty state label -->
            <Label x:Name="EmptyStateLabel"
                   Text="No recent logs. Add a new entry or sign in to Microsoft to view logs."
                   FontSize="13"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   IsVisible="False"/>

            <!-- Scrollable List of Logs -->
            <CollectionView x:Name="LogsList"
                            SelectionMode="Single"
                            SelectionChanged="OnLogSelected">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical"
                                       ItemSpacing="12"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Outer card -->
                        <Border Padding="16"
                                StrokeThickness="1">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Radius="8"
                                        Opacity="0.35"/>
                            </Border.Shadow>

                            <Grid ColumnSpacing="12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon "card" -->
                                <Border Grid.Column="0"
                                        Padding="12"
                                        WidthRequest="56"
                                        HeightRequest="56"
                                        StrokeThickness="0"
                                        VerticalOptions="Start">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="12"/>
                                    </Border.StrokeShape>

                                    <Label Text="ðŸ“„"
                                           WidthRequest="56"
                                           HeightRequest="56"
                                           HorizontalTextAlignment="Center"
                                           VerticalTextAlignment="Center"
                                           FontSize="40"/>
                                </Border>

                                <!-- Content -->
                                <VerticalStackLayout Grid.Column="1"
                                                     Spacing="4">
                                    <!-- OneDrive file name -->
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>

                                    <!-- Last modified, in local time -->
                                    <Label Text="{Binding LastModifiedDateTime.LocalDateTime,
                                                          StringFormat='Last modified {0:MM/dd/yyyy h:mm tt}'}"
                                           FontSize="14"/>
                                </VerticalStackLayout>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Centered loading indicator overlay -->
        <ActivityIndicator x:Name="LoadingIndicator"
                           Grid.RowSpan="3"
                           IsVisible="False"
                           IsRunning="False"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           WidthRequest="60"
                           HeightRequest="60"
                           Scale="1.3"/>
    </Grid>
</ContentPage>
