<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.Views.ManagerLogsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0"
              Padding="20,20,20,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Title Section -->
            <VerticalStackLayout Grid.Column="0"
                                 Spacing="4"
                                 VerticalOptions="Center">
                <Label Text="Manager Logs"
                       FontSize="25"
                       FontAttributes="Bold" />
                <HorizontalStackLayout Spacing="8"
                                       Margin="0,4,0,0">
                    <Label Text="ðŸ—“ï¸"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center" />
                    <Label Text="Last 7 Days"
                           FontSize="16"
                           VerticalOptions="Center" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- New Log Entry Button -->
            <Button Grid.Column="1"
                    Text="+ New Log Entry"
                    FontAttributes="Bold"
                    FontSize="16"
                    CornerRadius="12"
                    Padding="20,10"
                    Margin="12,0,0,0"
                    VerticalOptions="Center"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="NewLogEntryPage" />

        </Grid>

        <!-- Scrollable List of Logs -->
        <CollectionView Grid.Row="1"
                        x:Name="LogsList"
                        Margin="16,0,16,16">
            <!-- Add spacing between rows -->
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                                   ItemSpacing="12" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Outer card -->
                    <Border Padding="16"
                            StrokeThickness="1">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="12" />
                        </Border.StrokeShape>
                        <Border.Shadow>
                            <Shadow Radius="8"
                                    Opacity="0.35" />
                        </Border.Shadow>

                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!-- Icon "card" -->
                            <Border Grid.Column="0"
                                    Padding="12"
                                    WidthRequest="56"
                                    HeightRequest="56"
                                    StrokeThickness="0"
                                    VerticalOptions="Start">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>

                                <Label Text="ðŸ“„"
                                       WidthRequest="56"
                                       HeightRequest="56"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                                       FontSize="40" />
                            </Border>

                            <!-- Content -->
                            <VerticalStackLayout Grid.Column="1"
                                                 Spacing="4">
                                <!-- Static name for now -->
                                <Label Text="Bldg Mgr Log.docx"
                                       FontSize="20"
                                       FontAttributes="Bold" />

                                <HorizontalStackLayout Spacing="16">
                                    <HorizontalStackLayout Spacing="6">
                                        <!-- Date from DB -->
                                        <Label Text="{Binding Date, StringFormat='{0:MMM d, yyyy}'}"
                                               FontSize="12" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>