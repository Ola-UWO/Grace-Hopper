<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.Views.EventCheckInLogs"
             xmlns:local="clr-namespace:ReeveUnionManager.Models">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="FillAndExpand">

            <Label Text="Event Check-In Logs"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0" />

            <BoxView HeightRequest="1"
                     Color="Gray"
                     HorizontalOptions="FillAndExpand" />

            <CollectionView ItemsSource="{Binding ScrapeEvents}"
                            HorizontalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="local:ScrapeEvent">
                        <Border Padding="15"
                                Margin="0,10"
                                StrokeThickness="3"
                                BackgroundColor="White">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="12"/>
                            </Border.StrokeShape>
                            <Border.Triggers>
                                <DataTrigger TargetType="Border" 
                                           Binding="{Binding HasNotes}" 
                                           Value="True">
                                    <Setter Property="Stroke" Value="Green"/>
                                </DataTrigger>
                                <DataTrigger TargetType="Border" 
                                           Binding="{Binding HasNotes}" 
                                           Value="False">
                                    <Setter Property="Stroke" Value="LightGray"/>
                                </DataTrigger>
                            </Border.Triggers>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnEventTapped" CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <!-- Name Row -->
                                <Grid Grid.Row="0" Grid.Column="0" ColumnDefinitions="Auto,*">
                                    <Label Grid.Column="0" 
                                           Text="Name: " 
                                           FontAttributes="Bold" 
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1" 
                                           Text="{Binding EventTitle}" 
                                           VerticalOptions="Center" />
                                </Grid>
                                
                                <!-- Time Row -->
                                <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="Auto,*">
                                    <Label Grid.Column="0" 
                                           Text="Time: " 
                                           FontAttributes="Bold" 
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1" 
                                           Text="{Binding EventDateAndTime}" 
                                           VerticalOptions="Center" />
                                </Grid>
                                
                                <!-- Location Row -->
                                <Grid Grid.Row="2" Grid.Column="0" ColumnDefinitions="Auto,*">
                                    <Label Grid.Column="0" 
                                           Text="Location: " 
                                           FontAttributes="Bold" 
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="1" 
                                           Text="{Binding EventLocation}" 
                                           VerticalOptions="Center" />
                                </Grid>
                                
                                <!-- Check mark indicator -->
                                <Label Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                       Text="âœ“"
                                       FontSize="32"
                                       TextColor="Green"
                                       VerticalOptions="Center"
                                       HorizontalOptions="End"
                                       IsVisible="{Binding HasNotes}" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>