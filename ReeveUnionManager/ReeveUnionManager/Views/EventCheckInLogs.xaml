<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.Views.EventCheckInLogs"
             Title="Event Check-In Logs">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="FillAndExpand">

            <Label Text="Event Check-In Logs"
                   FontSize="Large"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0" />

            <BoxView HeightRequest="1"
                     Color="Gray"
                     HorizontalOptions="FillAndExpand" />

            <Grid RowDefinitions="Auto,*"
                  Padding="0"
                  HorizontalOptions="FillAndExpand">

                <Grid Grid.Row="0"
                      ColumnDefinitions="*,*,*"
                      Padding="0,0,0,5"
                      HorizontalOptions="FillAndExpand">
                    <Label Grid.Column="0" Text="Name" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="1" Text="Time" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                    <Label Grid.Column="2" Text="Location" FontAttributes="Bold" HorizontalTextAlignment="Center" />
                </Grid>

                <VerticalStackLayout Grid.Row="1" Spacing="5" Margin="0,10,0,0">
                    <Grid ColumnDefinitions="*,*,*">
                        <Label Grid.Column="0" Text="Task 1" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="1" Text="10:00 AM" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="2" Text="Room A" HorizontalTextAlignment="Center" />
                    </Grid>
                    <Grid ColumnDefinitions="*,*,*">
                        <Label Grid.Column="0" Text="Task 2" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="1" Text="11:00 AM" HorizontalTextAlignment="Center" />
                        <Label Grid.Column="2" Text="Room B" HorizontalTextAlignment="Center" />
                    </Grid>
                </VerticalStackLayout>

                <CollectionView Grid.Row="1"
                                ItemsSource="{Binding EventLogs}"
                                HorizontalOptions="FillAndExpand">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="*,*,*"
                                  Padding="0,5"
                                  HorizontalOptions="FillAndExpand">
                                <Label Grid.Column="0" Text="{Binding Name}" HorizontalTextAlignment="Center" />
                                <Label Grid.Column="1" Text="{Binding Time}" HorizontalTextAlignment="Center" />
                                <Label Grid.Column="2" Text="{Binding Location}" HorizontalTextAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>