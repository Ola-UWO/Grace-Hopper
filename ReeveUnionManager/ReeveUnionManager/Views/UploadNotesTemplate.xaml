<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.UploadNotesTemplate"
             x:Name="component">
    <ScrollView>
        
        <Grid RowDefinitions="*,Auto">
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                Margin ="10"
                VerticalOptions="Start">
                <Label Text="{Binding Title, Source={x:Reference component}}" HorizontalOptions="Center" VerticalOptions="Start" FontSize="24" Margin="0,0,0,100"></Label>
            
                <Button
                    x:Name="CounterBtn"
                    Text="Upload Photo"
                    HorizontalOptions="Center"
                    WidthRequest ="300"
                    VerticalOptions="Center"
                    HeightRequest="300"
                    Margin="0,0,0,0"
                    />

                <Border>    
                    <Editor x:Name="NotesBox" Placeholder="Notes" HeightRequest ="150" />
                </Border>

                
            
            </VerticalStackLayout>

            <Button
                x:Name="BackToHome"
                Text="Finished"
                HorizontalOptions="Fill"
                VerticalOptions="End"
                Margin="0,0,0,0"
                />
        </Grid>
    </ScrollView>
</ContentView>