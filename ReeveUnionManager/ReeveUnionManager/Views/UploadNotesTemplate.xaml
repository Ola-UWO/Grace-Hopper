<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReeveUnionManager.Views.UploadNotesTemplate"
             x:Name="component">

    <Grid RowDefinitions="Auto, *, Auto, Auto, Auto" VerticalOptions="Fill" RowSpacing="20" Padding="10">

        <Label Text="{Binding Title, Source={x:Reference component}}" HorizontalOptions="Center" VerticalOptions="Start" FontSize="30" Margin="0,10,0,0" Grid.Row="0"></Label>
        
        <ScrollView  VerticalOptions="Fill" Grid.Row="1">
            <CollectionView x:Name="UploadedPhotos" ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image/>
                                <Button Text="X"></Button>
                            </Grid>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

            
        <Grid ColumnDefinitions="*,*" Grid.Row="2" ColumnSpacing="10">
            <Button Grid.Column="0" Text="Upload Photo" IsEnabled="False"/>
            <Button Grid.Column="1" Text="Capture Photo" IsEnabled="False"/>
        </Grid>

        <VerticalStackLayout Grid.Row="3" VerticalOptions="Fill">
            
            <Label FontSize="20">Notes:</Label>

            <Border>    
                <Editor x:Name="NotesBox" Placeholder="Notes" VerticalOptions="Fill" HeightRequest="250"/>
            </Border>

        </VerticalStackLayout>
        
        <Button
            x:Name="BackToHome"
            Text="Submit"
            HorizontalOptions="Fill"
            VerticalOptions="End"
            Margin="0,0,0,0"
            Grid.Row="4"
            IsEnabled="False"
            />
    </Grid>

</ContentView>